<h1><%= t ".title" %></h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= Sala.human_attribute_name(:nombre) %></th>
      <th><%= Sala.human_attribute_name(:apellido) %></th>
      <th><%= Sala.human_attribute_name(:cumple) %></th>
      <th><%= Sala.human_attribute_name(:email) %></th>
      <th><%= Sala.human_attribute_name(:fecha_festejo) %></th>
      <th><%= Sala.human_attribute_name(:lugar_festejo) %></th>
      <th><%= t ".actions" %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  	<%= will_paginate %>
    <% @salas.each do |sala| %>
      <tr>
        <td><%= sala.nombre.capitalize %></td>
        <td><%= sala.apellido.capitalize %></td>
        <td><%= l(sala.cumple, format: :long) %></td>
        <td><%= sala.email %></td>
        <td><%= l(sala.fecha_festejo, format: :longer) %></td>
        <td><%= sala.lugar_festejo %></td>
        <td><%= link_to (t ".show"), sala, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to (t ".edit"), edit_sala_path(sala), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to (t ".delete"), sala, method: :delete,
                data: { confirm: (t ".confirm") },
                class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <%= will_paginate  %>
<br>

