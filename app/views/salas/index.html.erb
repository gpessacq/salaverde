<h1>Listado de chicos</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Cumple</th>
      <th>Email</th>
      <th>Fecha de festejo</th>
      <th>Lugar de festejo</th>
      <th>Acciones</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  	<%= will_paginate %>
    <% @salas.each do |sala| %>
      <tr>
        <td><%= sala.nombre.capitalize %></td>
        <td><%= sala.apellido.capitalize %></td>
        <td><%= sala.cumple.strftime('%d/%m/%Y') %></td>
        <td><%= sala.email %></td>
        <td><%= sala.fecha_festejo.strftime('%H:%Mhrs - %d/%m/%Y') %></td>
        <td><%= sala.lugar_festejo %></td>
        <td><%= link_to 'Mostrar', sala %></td>
        <td><%= link_to 'Editar', edit_sala_path(sala) %></td>
        <td><%= link_to 'Borrar', sala, method: :delete, data: { confirm: 'EstÃ¡ seguro ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
